{% extends 'app.twig' %}

{% block content %}

{% include 'partials/loading.twig' %}

<div class="row bottom-gap">
	<div class="col-md-8 offset-md-2">
		<h1 class="display-3 text-center headline">Lockdoc</h1>
	</div>
</div>

<div class="row bottom-gap">
	<div class="col-md-8 offset-md-2">
		<p class="h5 text-justify">To use this app all you need to do is select all files that need to be securely sent to The Scan Clinic customer care team. This app only accepts PDF (.pdf) or Microsoft Word (.doc, .docx) files </p>
	</div>
</div>

<div class="container">
	<div class="row">
		<div class="col-md-8 offset-md-2">
			<form method="POST" name="fileform" action="" id="LockForm" class="needs-validation text-center formSubmit" enctype="multipart/form-data" >
				<div class="form-group text-center bottom-gap">
					<input type="file" name="files[]" id="lockFileInput" class="inputfile" data-multiple-caption="{count} files selected" multiple required/>
					<label for="lockFileInput"><figure><svg xmlns="http://www.w3.org/2000/svg" width="20" height="17" viewBox="0 0 20 17"><path d="M10 0l-5.2 4.9h3.3v5.1h3.8v-5.1h3.3l-5.2-4.9zm9.3 11.5l-3.2-2.1h-2l3.4 2.6h-3.5c-.1 0-.2.1-.2.1l-.8 2.3h-6l-.8-2.2c-.1-.1-.1-.2-.2-.2h-3.6l3.4-2.6h-2l-3.2 2.1c-.4.3-.7 1-.6 1.5l.6 3.1c.1.5.7.9 1.2.9h16.3c.6 0 1.1-.4 1.3-.9l.6-3.1c.1-.5-.2-1.2-.7-1.5z"/></svg></figure> <p class="h4 mt-4">Add files...</p></label>
				</div>
				<div class="form-group text-center bottom-gap">
	 				<button class="btn btn-protect btn-big" type="submit">Lock my Docs</button>
	 			</div>
			</form>
		</div>
	</div>
</div>


<div id="fileErrorBag" class="row bottom-gap hide">
	<div class="col-md-8 offset-md-2">
		<div class="alert alert-danger text-center bottom-gap">
			<p id="fileErrorText"></p>
		</div>
	</div>
</div>



{% endblock %}